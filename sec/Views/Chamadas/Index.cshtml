@model sec.Models.Usuario
@{
    ViewBag.Title = "Chamadas";
    int i = 0;
}
<style>
</style>
<div class="row">
    <div class="col-md-3 p-4 bg-danger" style="color: white;height: calc(100vh - 71px); position: fixed;">
        <div class="grupo-perfil" style="text-align: center;">
            <i class="fa fa-user-circle" id="imgPadrao" style="font-size: 4.5rem; color: white;"></i>
        </div>
        <div class="grupo-perfil" style="text-align: center; ">
            <h2>@Model.Nome</h2>
            <h3>@Model.Nick</h3>
        </div>
        <div class="grupo-perfil">
            <div style="text-align: center;">
                <label>Conversando Com:</label>
                @Html.DropDownList("slcAmigo", ViewBag.usuarios as SelectList, "Selecione", new { @class = "form-control" })

            </div>
        </div>
        <div class="grupo-perfil">
            <div style="text-align: center;">
                <label>Realizar chamada: </label><br />
                <button type="button" class="btn ligar">Voz</button>
                <button type="button" class="btn ligar">Vídeo</button>
            </div>
        </div>


    </div>
    <div class="offset-md-3 col-md-9 " style="text-align: right;">
        <div class="chamadas" style="">
            @*<div class="caixaTotal" style="display: block">
                <div class="caixaChat">oiii</div>
                <img src="~/Content/Imagens/user-circle-solid.svg" style="width: 30px; height: 30px;" />
            </div>*@


        </div>
        <div class="col-md-9 textoChamada" style="background-color: white; z-index: 1042;">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="textoChat" placeholder="Digite algo..." aria-label="Recipient's username" aria-describedby="addMsg">
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="button" id="addMsg">Enviar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="text-align: center;">
                <h2>Você deseja realizar a chamada?</h2>
            </div>
            <div class="modal-footerr" style="padding: 1rem;border-top: 1px solid #e9ecef;">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                    <div class="col-md-6" style="text-align: right;">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Ligar</button>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/ScriptSEC/Chat.js")
}